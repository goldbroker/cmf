{% set treeAdapter = treeAdapter|default('fancytree')|lower %}

{% if treeAdapter == 'fancytree' %}
<script>window.jQuery || document.write('<script src="{{ asset(assetsBasePath ~ '/jquery/dist/jquery.min.js') }}"><\/script>')</script>
<script>window.jQuery.ui || document.write('<script src="{{ asset(assetsBasePath ~ '/jquery-ui/jquery-ui.min.js') }}"><\/script>')</script>
{% endif %}

<script>
if (jQuery.fn.cmfTree === undefined) {
    document.write('<script src="{{ asset('bundles/cmftreebrowser/js/cmf_tree_browser.' ~ treeAdapter ~ '.js' ~ (app.debug ? 'now'|date('?U') : '')) }}"><\/script>');
    document.write('<link rel="stylesheet" href="{{ asset('bundles/cmftreebrowser/css/cmf_tree_browser.' ~ treeAdapter ~ '.css') }}" media="all"/>');
}
</script>
